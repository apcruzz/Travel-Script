
<% raise "trip is nil!" if trip.nil? %>
<div id="<%= dom_id(trip)%>" class="trip">
    <p><strong>Title:</strong> <%= link_to_unless_current trip.title, trip_path(trip) %></p>
    <p><strong>Destination:</strong> <%= trip.destination %></p>
    <p><strong>Start Date:</strong> <%= trip.start_date.strftime("%B %d, %Y") %></p>
    <p><strong>End Date:</strong> <%= trip.end_date.strftime("%B %d, %Y") %></p>
    <p><strong>Description:</strong> <%= trip.description %></p>
    <% if trip.media.attached? %>
      <div class="media">
        <% trip.media.each do |media_item| %>
          <%= image_tag media_item, class: "img-fluid" %>
        <% end %>
      </div>
    <% end %>
    <hr>
  </div>