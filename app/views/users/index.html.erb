<% title "All Users" %>

<div class="container mt-5">
  <h2 class="text-center mb-4">All Users</h2>

  <% if @users.present? %>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card text-center shadow-sm border-0 rounded-4 p-3">
            <h4><%= user.name %></h4>
            <p class="text-muted"><%= user.email_address %></p>
            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">No users found.</p>
  <% end %>
</div>
