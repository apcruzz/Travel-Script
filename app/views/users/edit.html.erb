<% title "Edit Profile" %>

<div class="container mt-5" style="max-width: 500px;">
  <div class="card shadow-sm border-0 rounded-4 p-4">
    <h2 class="text-center mb-4">Edit Your Account</h2>

    <%= bootstrap_form_with model: @user, local: true do |f| %>
      <%= f.text_field :name, required: true, placeholder: "Full Name" %>
      <%= f.email_field :email_address, required: true, placeholder: "Email Address" %>
      <%= f.password_field :password, placeholder: "New Password (optional)" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm New Password" %>
      <div class="text-center">
        <%= f.primary "Update Profile", class: "btn btn-success w-100 mt-3" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back", user_path(@user), class: "btn btn-secondary w-100" %>
    </div>
  </div>
</div>
